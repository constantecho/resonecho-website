---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="logo">
			<a href="/" class="logo-link">
				<svg class="logo-icon" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
					<!-- Mesh network nodes icon -->
					<circle cx="8" cy="8" r="3" fill="currentColor"/>
					<circle cx="32" cy="8" r="3" fill="currentColor"/>
					<circle cx="20" cy="20" r="3" fill="currentColor"/>
					<circle cx="8" cy="32" r="3" fill="currentColor"/>
					<circle cx="32" cy="32" r="3" fill="currentColor"/>
					<!-- Connection lines -->
					<line x1="8" y1="8" x2="20" y2="20" stroke="currentColor" stroke-width="1.5" opacity="0.5"/>
					<line x1="32" y1="8" x2="20" y2="20" stroke="currentColor" stroke-width="1.5" opacity="0.5"/>
					<line x1="20" y1="20" x2="8" y2="32" stroke="currentColor" stroke-width="1.5" opacity="0.5"/>
					<line x1="20" y1="20" x2="32" y2="32" stroke="currentColor" stroke-width="1.5" opacity="0.5"/>
				</svg>
				<h2>{SITE_TITLE}</h2>
			</a>
		</div>
		<div class="mobile-menu-toggle" id="mobile-menu-toggle" aria-label="Toggle menu">
			<span></span>
			<span></span>
			<span></span>
		</div>
		<div class="internal-links" id="menu-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/product">Product</HeaderLink>
			<HeaderLink href="/technology">Technology</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: sticky;
		top: 0;
		z-index: 100;
		backdrop-filter: blur(10px);
		background: rgba(255, 255, 255, 0.95);
	}

	.logo-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		text-decoration: none;
		transition: transform 0.2s ease;
	}

	.logo-link:hover {
		transform: translateY(-1px);
	}

	.logo-icon {
		width: 32px;
		height: 32px;
		color: var(--primary);
	}

	h2 {
		margin: 0;
		font-size: 1.6em;
		color: var(--primary);
	}
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1rem 0;
		max-width: 1080px;
		margin: 0 auto;
	}
	
	.internal-links {
		display: flex;
		gap: 1rem;
	}
	
	nav a {
		padding: 0.5em 0.8em;
		color: var(--black);
		border-radius: 4px;
		text-decoration: none;
		font-weight: 500;
		transition: background-color 0.2s ease;
	}
	
	nav a:hover {
		background-color: rgba(var(--gray-light), 0.7);
		text-decoration: none;
	}
	
	nav a.active {
		color: var(--primary);
		font-weight: bold;
	}
	
	.mobile-menu-toggle {
		display: none;
		flex-direction: column;
		justify-content: space-between;
		width: 30px;
		height: 21px;
		cursor: pointer;
	}
	
	.mobile-menu-toggle span {
		display: block;
		height: 3px;
		width: 100%;
		background-color: var(--primary);
		border-radius: 3px;
		transition: all 0.3s ease;
	}
	
	@media (max-width: 720px) {
		.mobile-menu-toggle {
			display: flex;
		}
		
		.internal-links {
			flex-direction: column;
			position: absolute;
			top: 100%;
			right: 0;
			left: 0;
			background: white;
			box-shadow: 0 2px 8px rgba(var(--black), 5%);
			padding: 0;
			display: none;
			width: 100%;
			z-index: 100;
		}
		
		.internal-links a {
			padding: 1rem;
			border-top: 1px solid rgba(var(--gray-light), 1);
			width: 100%;
			text-align: center;
		}
		
		.internal-links.expanded {
			display: flex;
		}
		
		nav {
			padding: 0.8rem 0;
			position: relative;
		}
		
		/* Animation for the hamburger menu */
		.mobile-menu-toggle.active span:first-child {
			transform: rotate(45deg) translate(5px, 6px);
		}
		
		.mobile-menu-toggle.active span:nth-child(2) {
			opacity: 0;
		}
		
		.mobile-menu-toggle.active span:last-child {
			transform: rotate(-45deg) translate(5px, -6px);
		}
	}
</style>

<script>
	// Mobile menu toggle functionality
	document.addEventListener('DOMContentLoaded', function() {
		const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
		const menuLinks = document.getElementById('menu-links');
		
		if (mobileMenuToggle) {
			mobileMenuToggle.addEventListener('click', function() {
				menuLinks.classList.toggle('expanded');
				mobileMenuToggle.classList.toggle('active');
			});
		}
		
		// Close menu when clicking on a link
		const navLinks = document.querySelectorAll('.internal-links a');
		navLinks.forEach(link => {
			link.addEventListener('click', function() {
				if (window.innerWidth <= 720) {
					menuLinks.classList.remove('expanded');
					mobileMenuToggle.classList.remove('active');
				}
			});
		});
		
		// Close menu when clicking outside
		document.addEventListener('click', function(e) {
			if (window.innerWidth <= 720 && 
				!mobileMenuToggle.contains(e.target) && 
				!menuLinks.contains(e.target) &&
				menuLinks.classList.contains('expanded')) {
				menuLinks.classList.remove('expanded');
				mobileMenuToggle.classList.remove('active');
			}
		});
	});
</script>