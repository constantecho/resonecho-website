---
const today = new Date();
---

<footer>
	<div class="footer-content">
		<div class="footer-logo">
			<h3>ResonEcho</h3>
			<p>Connectivity Beyond Networks</p>
		</div>
		
		<div class="footer-links">
			<div class="link-group">
				<h4>Pages</h4>
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/product">Product</a></li>
					<li><a href="/technology">Technology</a></li>
					<li><a href="/about">About</a></li>
					<li><a href="/contact">Contact</a></li>
				</ul>
			</div>
			
			<div class="link-group">
				<h4>Connect</h4>
				<ul>
					<li><a href="mailto:contact@resonecho.com">Email Us</a></li>
					<li><a href="https://www.linkedin.com/in/stephen-d-920845360" target="_blank" rel="noopener noreferrer">LinkedIn</a></li>
				</ul>
			</div>
		</div>
	</div>
	
	<div class="footer-bottom">
		<p>&copy; {today.getFullYear()} ResonEcho. All rights reserved.</p>
	</div>
</footer>

<style>
	footer {
		padding: 4rem 1rem 2rem 1rem;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray-dark));
	}
	
	.footer-content {
		max-width: 1080px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		flex-wrap: wrap;
		gap: 2rem;
	}
	
	.footer-logo h3 {
		margin: 0;
		font-size: 1.8rem;
		color: var(--primary);
	}
	
	.footer-logo p {
		margin-top: 0.5rem;
		opacity: 0.8;
	}
	
	.footer-links {
		display: flex;
		gap: 4rem;
	}
	
	.link-group h4 {
		margin-top: 0;
		font-size: 1.1rem;
	}
	
	.link-group ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	
	.link-group li {
		margin-bottom: 0.7rem;
	}
	
	.link-group a {
		color: rgb(var(--gray-dark));
		text-decoration: none;
		transition: color 0.2s ease;
	}
	
	.link-group a:hover {
		color: var(--primary);
	}
	
	.footer-bottom {
		max-width: 1080px;
		margin: 3rem auto 0;
		padding-top: 1.5rem;
		border-top: 1px solid rgba(var(--gray), 0.3);
		text-align: center;
		font-size: 0.9rem;
		opacity: 0.8;
	}
	
	@media (max-width: 768px) {
		.footer-content {
			flex-direction: column;
			gap: 2rem;
		}
		
		.footer-links {
			width: 100%;
			justify-content: space-between;
			gap: 1rem;
		}
	}
</style>